            Background="{x:Null}"
            BorderThickness="0"
            FontFamily="Segoe UI"
            FontSize="30"
            FontWeight="Bold"
            Foreground="White"
            TextWrapping="Wrap"
            Visibility="Collapsed" />


        <Grid
            x:Name="GridShowPictureInlayout"
            Grid.Row="0"
            Grid.RowSpan="6"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Panel.ZIndex="-1"
            Visibility="Collapsed">

            <Border
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

