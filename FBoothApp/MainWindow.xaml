            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Collapsed">
            <Image
                Width="70"
                Height="70"
                Source="pack://application:,,,/backgrounds/NextButton.png" />
        </Button>

        <Button
            x:Name="NextButtonPrinting"
            Grid.Row="5"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="NextButtonPrinting_Click"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Collapsed">
