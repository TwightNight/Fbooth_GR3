                                                        <Setter Property="Cursor" Value="Hand" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!--  Nút In Ảnh  -->
                        <Button
                            x:Name="PrintButton"
                            Grid.Column="0"
                            BorderThickness="0"
                            Click="Print_Click"
                            FontSize="16"
                            Visibility="Collapsed">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="border"
                                                    Padding="10"
                                                    Background="White"
                                                    CornerRadius="15">
                                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                        <Image
                                                            Width="20"
                                                            Height="20"
                                                            Source="pack://application:,,,/backgrounds/Print.png" />
                                                        <TextBlock
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center"
                                                            FontSize="16"
                                                            FontWeight="Bold"
                                                            Foreground="Black"
                                                            Text="Print your picture" />
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#FFBEE6FD" />
                                                        <Setter Property="Cursor" Value="Hand" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!--Nút tạo QR-->
                        <Button
                            x:Name="CreateQRCodeButton"
                            Grid.Column="0"
                            BorderThickness="0"
                            Click="CreateQRCodeButton_Click"
                            FontSize="16"
                            Visibility="Collapsed">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="border"
                                                    Padding="10"
                                                    Background="White"
                                                    CornerRadius="15">
                                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                        <Image
                                                            Width="20"
                                                            Height="20"
                                                            Source="pack://application:,,,/backgrounds/qrcode.png" />
                                                        <TextBlock
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center"
                                                            FontSize="16"
                                                            FontWeight="Bold"
                                                            Foreground="Black"
                                                            Text="Create QR Code" />
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#FFBEE6FD" />
                                                        <Setter Property="Cursor" Value="Hand" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>


                    </Grid>

                    <!--  Khu vực nút "Close Booking" riêng biệt  -->
                    <Grid
                        Grid.Row="3"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Nút Đóng Booking  -->
                        <Button
                            x:Name="CloseBookingButton"
                            Grid.Column="0"
                             Margin="0,0,0,30"
                            BorderThickness="0"
                            Click="CloseBooking_Click"
                            FontSize="16">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="border"
                                                    Padding="10"
                                                    Background="Red"
                                                    CornerRadius="15">
                                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                        <Image
                                                            Width="20"
                                                            Height="20"
                                                            Source="pack://application:,,,/backgrounds/closeSession.png" />
                                                        <TextBlock
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center"
                                                            FontSize="16"
                                                            FontWeight="Bold"
                                                            Foreground="White"
                                                            Text="Close the booking" />
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#FFBEE6FD" />
                                                        <Setter Property="Cursor" Value="Hand" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <TextBlock
            x:Name="CountdownTextBlock"
            Grid.Row="5"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontStyle="Italic"
            FontWeight="Bold"
            Foreground="Black"
            Text="Time remaining: --:--:--"
            TextWrapping="Wrap"
            Visibility="Collapsed" />

        <Border x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Grid.Column="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="6"
                >
                
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Processing, please wait..." Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="150" Height="20" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
