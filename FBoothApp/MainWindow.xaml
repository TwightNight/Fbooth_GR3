                        Color="Black" />
                </TextBlock.Effect>
            </TextBlock>

            <Border
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,50,0,0"
                Padding="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="White"
                CornerRadius="20">
                <Grid>
                    <TextBox
                        x:Name="RoundedTextBox"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="30"
                        FontStyle="Italic"
                        Foreground="Gray"
                        GotFocus="RoundedTextBox_GotFocus"
                        LostFocus="RoundedTextBox_LostFocus"
                        Text="Enter the code from your email here!"
                        TextChanged="RoundedTextBox_TextChanged" />
                    <Button
                        x:Name="SendButton"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="SendButton_Click"
                        IsEnabled="False"
                        Style="{StaticResource NoHighlightButtonStyle}">
                        <Image
                            Width="35"
                            Height="35"
                            Source="pack://application:,,,/backgrounds/send.png">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Opacity" Value="0.5" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEnabled, ElementName=SendButton}" Value="True">
                                            <Setter Property="Opacity" Value="1.0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Button>
                    <Border
                        x:Name="LoadingProgressBarContainer"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Visibility="Collapsed">
                        <Grid>
                            <Ellipse
                                Width="50"
                                Height="50"
                                Fill="Transparent"
                                Opacity="0.5"
                                Stroke="#FFFFFF"
                                StrokeThickness="5" />
                            <Ellipse
                                Width="50"
                                Height="50"
                                Fill="Transparent"
                                Stroke="#61F2F5"
                                StrokeDashArray="25,75"
                                StrokeDashCap="Round"
                                StrokeThickness="5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotateTransform" CenterX="25" CenterY="25" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Grid
            x:Name="BorderPanel"
            Grid.Row="1"
            Grid.RowSpan="3"
