                Foreground="Black"
                Text="FBooth">
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        ShadowDepth="4"
                        Color="White" />
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock
