                                    Background="#EEEEEE"
                                    CornerRadius="20">
                                    <ScrollViewer
                                        x:Name="StickerScrollViewer"
                                        VerticalAlignment="Stretch"
                                        HorizontalScrollBarVisibility="Disabled"
                                        PanningMode="VerticalOnly"
                                        VerticalScrollBarVisibility="Hidden"
                                        Visibility="Visible">
                                        <WrapPanel
                                            x:Name="StickerWrapPanel"
                                            Margin="10"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top" />
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </TabItem>
                    </TabControl>

                    <!--  ShowPrint area  -->
                    <Border
                        x:Name="GirdShowPrintPicture"
                        Grid.Column="1"
                        Margin="10,55,10,10"
                        CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <!--  Row for the text block  -->
                                <RowDefinition Height="*" />
                                <!--  Row for the image and canvas  -->
                            </Grid.RowDefinitions>

                            <!--  Top Border with Text  -->
                            <Border
                                Grid.Row="0"
                                Margin="0,0,10,20"
                                Padding="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="White"
                                CornerRadius="20">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="30"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Choose a Background and Sticker for Your Photo!"
                                    TextWrapping="Wrap" />
                            </Border>

                            <!--  Main Border with Image and Canvas  -->
                            <Border
                                Grid.Row="1"
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                CornerRadius="10">
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image
                                        x:Name="ShowPrint"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                    <Canvas
                                        Name="CanvasSticker"
                                        Width="{Binding ActualWidth, ElementName=ShowPrint}"
                                        Height="{Binding ActualHeight, ElementName=ShowPrint}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="Transparent" />
                                </Grid>
                            </Border>
                        </Grid>

                    </Border>
                </Grid>
            </Border>
        </Grid>







