        <Border
            x:Name="Overlay"
            Grid.Row="0"
            Grid.RowSpan="6"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Black"
            IsHitTestVisible="False"
            Opacity="0"
            Visibility="Collapsed" />

        <Grid
            x:Name="LayoutTabControlGrid"
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Visibility="Collapsed">

            <Border
                Padding="50"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
